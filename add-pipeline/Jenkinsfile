pipeline {
    agent any

    environment {
        APP_NAME = 'weather_app'
        DOCKER_IMAGE = 'your_dockerhub_username/weather_app:latest' // Replace with your Docker Hub username
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/DivijaSistla/jenkinsL.git' // Replace with your repo URL
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Add any tests if applicable. For example, you could run a test suite here.
                    // sh "pytest tests/"  // Uncomment if you have tests set up
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Here you can add commands to deploy your application, e.g., running it on a server.
                    // For example, using Docker:
                    sh "docker run -d -p 5000:5000 ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
