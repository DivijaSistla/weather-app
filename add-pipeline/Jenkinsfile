pipeline {
    agent any 

    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout your code from Git
                git 'https://github.com/DivijaSistla/weather-app.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    def dockerImage = docker.build("weather-app")
                }
            }
        }
        
        stage('Run Docker Container') {
            steps {
                script {
                    // Remove any existing container with the same name
                    sh 'docker rm -f weather-container || true'
                    
                    // Run the Docker container
                    sh 'docker run -d -p 5000:5000 --name weather-container weather-app'
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful! You can access your app at http://<your-ec2-public-ip>:5000'
        }
        failure {
            echo 'Deployment failed. Please check the logs for errors.'
        }
    }
}
