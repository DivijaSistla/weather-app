pipeline {
    agent any 

    stages {
        stage('Checkout SCM') {
            steps {
                // Checkout the code from Git
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    // Any build commands you need
                    echo 'Building the application...'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Add commands to run your tests
                    echo 'Running tests...'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Add commands to deploy your application
                    echo 'Deploying the application...'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
